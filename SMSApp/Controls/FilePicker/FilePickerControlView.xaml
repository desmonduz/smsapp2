<UserControl 
    x:Class="SMSApp.Controls.FilePicker.FilePickerControlView"         
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMSApp.Controls.FilePicker"
             mc:Ignorable="d" 
           >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="2"  Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="170"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <TextBlock Width="50" Text="Name:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0 "/>
            <TextBox Margin="2" Height="25" Text="{Binding Title, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>

            <TextBlock Width="50" Text="File:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="txtFilePath" IsReadOnly="True" Margin="2" Height="25"  Text="{Binding CurrentFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"></TextBox>

            <WrapPanel Grid.Row="1" Grid.Column="2">
                <Button x:Name="btnBrowse" Click="btnBrowse_Click" Content="Browse" Margin="2"></Button>
                <Button x:Name="btnUpload" Command="{Binding UploadFileCmd}" Content="Upload" Margin="2"></Button>
            </WrapPanel>
        </Grid>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="2 2 2 0" VerticalScrollBarVisibility="Auto" Height="100" HorizontalScrollBarVisibility="Auto">
            <ListBox x:Name="lstFiles" DisplayMemberPath="Title" ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFileItem}"></ListBox>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Margin="2" Grid.Row="2">
            <Button  Command="{Binding DownloadCmd}" Content="Open" Margin="2"></Button>
            <Button  Command="{Binding DeleteCmd}" Content="Delete" Margin="2"></Button>
        </StackPanel>
    </Grid>
</UserControl>
