<Window x:Class="SMSApp.Views.PlantAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <DockPanel Margin="20">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0 0 0 10" FontSize="16" FontWeight="Bold">ADD PLANT</Label>
        <WrapPanel Margin="2 20 2 2" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <Button Margin="0 0 10 0"  Width="80" Command="{Binding AddEntityCommand}">Save</Button>
            <!--Closing window is a View's task, so implement it inside View using event handler-->
            <Button Width="80" Click="Button_Click">Cancel</Button>
        </WrapPanel>
        <StackPanel DockPanel.Dock="Left">
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Name:</Label>
                <TextBox Width="200" Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Scientific name:</Label>
                <TextBox Width="200" Text="{Binding Model.ScientificName, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Scientific classification:</Label>
                <TextBox Width="200" Text="{Binding Model.ScientificClassification, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Agricultural name:</Label>
                <TextBox Width="200" Text="{Binding Model.AgriculturalName, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Agricultural classification:</Label>
                <TextBox Width="200" Text="{Binding Model.AgriculturalClassification, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Country of origin:</Label>
                <TextBox Width="200" Text="{Binding Model.CountryOfOrigin, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">IAPTCode:</Label>
                <TextBox Width="200" Text="{Binding Model.IAPTCode, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Lifespan:</Label>
                <TextBox Width="200" Text="{Binding Model.Lifespan, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel Margin="0 0 0 10">
                <Label Width="160">Vendor:</Label>
                <TextBox Width="200" Text="{Binding Model.Vendor, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
            <WrapPanel>
                <Label Width="160">Vendor core:</Label>
                <TextBox Width="200" Text="{Binding Model.VendorCore, UpdateSourceTrigger=PropertyChanged}"/>
            </WrapPanel>
        </StackPanel>
        <Rectangle Margin="10 0" Fill="Gray" Width="1"/>
        <StackPanel DockPanel.Dock="Right">
            <Label>Additional notes:</Label>
            <TextBox Margin="0 0 0 10" VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" Height="100" Width="360"
                Text="{Binding Model.AdditionalNotes, UpdateSourceTrigger=PropertyChanged}"/>
            <Label>Photos:</Label>
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Width="320" Margin="0 0 0 10">
                <ItemsControl ItemsSource="{Binding Photos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="100" Height="100" BorderBrush="Gray" BorderThickness="1">
                                <Image Source="{Binding URL}" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Button HorizontalAlignment="Right" Margin="0 0 0 10" Padding="10 5" Command="{Binding AddPhotoCommand}">Add Photo</Button>
            <Label>Icon:</Label>
            <Border Width="100" Height="100" HorizontalAlignment="Left" BorderBrush="Gray" BorderThickness="1">
                <Image Source="{Binding IconUrl}" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill"/>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>